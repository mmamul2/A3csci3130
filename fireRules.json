{
  "rules": {
    ".read": false,
    ".write": false,
    "businesses": {
      "$business": {
        ".validate": "newData.hasChildren(['name', 'primaryBusiness']) && $business.matches(/^[0-9]{3}$/)",
        "name": {
          ".validate": "newData.isString() && newData.val().length >=2 && newData.val().length <= 48"
        },
        "primaryBusiness": {
          ".validate": "newData.isString() && newData.val().matches(/^(Fisher|Distributor|Processor|Fish Monger)$/)"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "province": {
          ".validate": "newData.isString() && newData.val().matches(/^(AB|BC|NB|NL|NS|NT|NU|ON|PE|QC|SK|YT| )$/)"
        }
      }
    }
  }
}





